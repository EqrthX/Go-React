<!DOCTYPE html>
<html lang="en">

    <%- include('layouts/head') %>

<body>

   <%- include('layouts/nav') %> 

   <main>
        <div class="container">

            <h1 style="text-align: center;">Edit</h1>

            <table class="table">

                <thead>

                    <tr>

                        <th scope="col">#</th>
                        <th scope="col">name</th>
                        <th scope="col">blog</th>
                        <th scope="col">TimeStamp</th>
                        <th scope="col">Button</th>

                    </tr>

                </thead>

                <% allBlog.forEach(blog => { %>

                <tbody>

                    <tr>

                        <th scope="row"><%= blog.id %></th>

                        <td><%= blog.name %></td>

                        <td><%= blog.blog %></td>

                        <td><%= blog.timestamp %></td>
                        
                        <td>
                            <a href="/edit-blog?id=<%= encodeURIComponent(blog.id) %>" class="btn btn-warning">EDIT</a>
                        </td>

                        <td>
                            <a href="/delete-blog?id=<%= encodeURIComponent(blog.id) %> " class="btn btn-danger">DELETE</a>
                        </td>

                    </tr>
                            
                </tbody>

                <% }) %>

            </table>

        </div>
   </main>

</body>
</html>